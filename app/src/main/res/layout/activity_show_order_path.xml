<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_auto_complete_origin" />
    <fragment
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_auto_complete_destination"/>
    <TextView
        android:id="@+id/tv_distance_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/distance_duration"
        android:paddingLeft="@dimen/tv_padding_left"
        android:textSize="@dimen/tv_textsize"/>

    <fragment
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/fragment_ggmap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>